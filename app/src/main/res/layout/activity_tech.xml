<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/woods"
    tools:context=".TechActivity">

    <TextView
        android:id="@+id/firstProductText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="696dp"
        android:fontFamily="sans-serif-medium"
        android:text="iPhone X"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/firstProductImg"
        android:layout_width="254dp"
        android:layout_height="202dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="488dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/iphonex" />

    <TextView
        android:id="@+id/firstProductCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:layout_marginBottom="464dp"
        android:fontFamily="sans-serif-medium"
        android:text="Product Cost: £"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/firstColourSpinner"
        android:layout_width="68dp"
        android:layout_height="17dp"
        android:layout_marginBottom="24dp"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/thirdAddToBasketBtn"
        app:layout_constraintStart_toEndOf="@+id/firstProductColorText" />

    <TextView
        android:id="@+id/firstProductColorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="Colour"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/thirdAddToBasketBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/firstQuantitySpinner"
        android:layout_width="81dp"
        android:layout_height="16dp"
        android:layout_marginBottom="27dp"
        app:layout_constraintBottom_toTopOf="@+id/thirdAddToBasketBtn"
        app:layout_constraintStart_toEndOf="@+id/firstProductQuantityText" />

    <TextView
        android:id="@+id/firstProductQuantityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="sans-serif-medium"
        android:text="Quantity"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/thirdAddToBasketBtn"
        app:layout_constraintStart_toEndOf="@+id/spinner5" />

    <Button
        android:id="@+id/thirdAddToBasketBtn"
        android:layout_width="449dp"
        android:layout_height="50dp"
        android:layout_marginBottom="360dp"
        android:background="@drawable/button_round"
        android:fontFamily="sans-serif-medium"
        android:text="Add To Basket"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/secondProductTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="89dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="332dp"
        android:fontFamily="sans-serif-medium"
        android:text="Apple Watch Series 5"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.283"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/appleWatchImg"
        android:layout_width="282dp"
        android:layout_height="177dp"
        android:layout_marginStart="69dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="152dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/applewatch" />

    <Button
        android:id="@+id/secondAddToBasketBtn"
        android:layout_width="449dp"
        android:layout_height="50dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_round"
        android:fontFamily="sans-serif-medium"
        android:text="Add To Basket"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/secondProductColourTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="sans-serif-medium"
        android:text="Colour"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/secondAddToBasketBtn"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/secondColourSpinner"
        android:layout_width="70dp"
        android:layout_height="19dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/secondAddToBasketBtn"
        app:layout_constraintStart_toEndOf="@+id/secondProductColourTxt" />

    <TextView
        android:id="@+id/secondQuantityTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="sans-serif-medium"
        android:text="Quantity"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/secondAddToBasketBtn"
        app:layout_constraintStart_toEndOf="@+id/textView21" />

    <Spinner
        android:id="@+id/secondQuantitySpinner"
        android:layout_width="83dp"
        android:layout_height="20dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/secondAddToBasketBtn"
        app:layout_constraintStart_toEndOf="@+id/secondQuantityTxt" />

    <TextView
        android:id="@+id/secondProductCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="13dp"
        android:fontFamily="sans-serif-medium"
        android:text="Product Cost: £"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView21"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/nextPageBtn"
        android:layout_width="124dp"
        android:layout_height="37dp"
        android:layout_marginStart="298dp"
        android:background="@android:color/black"
        android:fontFamily="sans-serif-medium"
        android:text="Next Page"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="24dp"
        android:text="Size"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/thirdAddToBasketBtn"
        app:layout_constraintStart_toEndOf="@+id/firstColourSpinner" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="75dp"
        android:layout_height="17dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="26dp"
        app:layout_constraintBottom_toTopOf="@+id/thirdAddToBasketBtn"
        app:layout_constraintStart_toEndOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="9dp"
        android:text="Size"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/secondAddToBasketBtn"
        app:layout_constraintStart_toEndOf="@+id/secondColourSpinner" />

    <Spinner
        android:id="@+id/spinner6"
        android:layout_width="65dp"
        android:layout_height="21dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="9dp"
        app:layout_constraintBottom_toTopOf="@+id/secondAddToBasketBtn"
        app:layout_constraintStart_toEndOf="@+id/textView21" />

</androidx.constraintlayout.widget.ConstraintLayout>